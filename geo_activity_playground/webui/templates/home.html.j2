{% extends "page.html.j2" %}

{% block container %}
<div class="row mb-3">
</div>

{% if latest_activities %}
<div class="row mb-3">
    <div class="col">
        <h2>Last 30 days</h2>
        {{ vega_direct("distance-last-30-days", distance_last_30_days_plot) }}
    </div>
</div>


<div class="row mb-3">
    <div class="col">
        <h2>Latest activities</h2>
    </div>
</div>

<script>
    function add_map(id, geojson) {
        let map = L.map(`map-${id}`, {
            fullscreenControl: true
        })
        L.tileLayer('/tile/color/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
        }).addTo(map)

        let geojson_layer = L.geoJSON(geojson).addTo(map)
        map.fitBounds(geojson_layer.getBounds())
        return map
    }
</script>

{% for activity_batch in latest_activities|batch(3) %}
<div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
    {% for elem in activity_batch %}
    <div class="col">
        <div class="card {{ '' if elem.activity.commute else 'border-primary' }}">
            <div class="card-img-top" id="map-{{ elem.activity.id }}" style="height: 200px; width: 100%;"></div>
            <script>
                let map{{ elem.activity.id }} = add_map("{{ elem.activity.id }}", {{ elem.line_geojson | safe }})
            </script>
            <div class="card-body">
                <a href="{{ url_for('activity.show', id=elem.activity.id) }}">
                    <h5 class="card-title">{{ elem.activity["name"] }}</h5>
                </a>
                <p class="card-text">{{ elem.activity.kind }} with {{ (elem.activity.distance_km)|round(1) }} km in {{
                    elem.activity.elapsed_time|td }}</p>
                <p class="card-text"><small class="text-body-secondary">{{ elem.activity.start|dt }}</small></p>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endfor %}
{% else %}
<p>You don't have activities yet. Either put some files into a directory <tt>Activities</tt> or <a
        href="{{ url_for('settings.strava') }}">set up Strava API</a>.</p>
{% endif %}

{% endblock %}