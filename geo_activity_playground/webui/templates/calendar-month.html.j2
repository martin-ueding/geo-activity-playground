{% extends "page.html.j2" %}

{% block container %}
<div class="row mb-1">
    <div class="col">
        <h1>Calendar {{ year }}-{{ "{0:02d}".format(month) }}</h1>
    </div>
</div>

<div class="row mb-1">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th>Week</th>
                    <th>Monday</th>
                    <th>Tuesday</th>
                    <th>Wednesday</th>
                    <th>Thursday</th>
                    <th>Friday</th>
                    <th>Saturday</th>
                    <th>Sunday</th>
                </tr>
            </thead>
            <tbody>
                {% for week, week_data in weeks.items() %}
                <tr>
                    <td>{{ week }}</td>
                    {% for day in range(1, 8) %}
                    <td>
                        {% if weeks[week][day] %}
                        <ul>
                            {% for activity in weeks[week][day] %}
                            <li><a href="/activity/{{ activity.id }}">{{ activity.name }}</a></li>
                            {% endfor %}
                        </ul>
                        {% endif %}
                    </td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>


{% endblock %}